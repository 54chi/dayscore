{
  "key": "shiny-happy-people-add-on",
  "name": "Dayscore",
  "description": "Track your project happiness!!",
  "vendor": {
    "name": "54chi",
    "url": "https://www.54chi.com"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/logo.png",
        "url@2x": "{{localBaseUrl}}/img/logo.png"
      }
    },
    "installable": {
      "allowGlobal": false,
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": [{
    		"url": "{{localBaseUrl}}/echo-webhook",
    		"event": "room_message",
    		"pattern": "^/echo",
    		"name": "Echo",
    		"authentication": "jwt"
  		},
      {
        "url": "{{localBaseUrl}}/dayscore",
    		"event": "room_message",
    		"pattern": "dayscore",
    		"name": "DayScore",
    		"authentication": "jwt"
      },
      {
      "url": "{{localBaseUrl}}/webhook",
      "pattern": "^/hello",
      "event": "room_message",
      "name": "Hello!",
      "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/send_notification",
        "pattern": "^/send",
        "event": "room_message",
        "name": "Notify",
        "authentication": "jwt"
      }
    ],
    "glance": [
      {
        "name": {
          "value": "Dayscore"
        },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "dayscore-glance",
        "target": "dayscore-sidebar",
        "icon": {
          "url": "{{localBaseUrl}}/img/logo.png",
          "url@2x": "{{localBaseUrl}}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "dayscore-sidebar",
        "name": {
          "value": "Hello Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "{{localBaseUrl}}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "sample.dialog",
        "title": {
          "value": "Hello Dialog!"
        },
        "url": "{{localBaseUrl}}/dialog",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Say Hello!"
            },
            "key": "sample.dialog.action",
            "enabled": true
          },
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
